// tsconfig.json
{
  "compilerOptions": {
    "target": "es5", // Target ECMAScript 5 for broad browser compatibility
    "lib": ["dom", "dom.iterable", "esnext"], // Standard libraries available in the environment
    "allowJs": true, // Allow JavaScript files to be part of the project
    "skipLibCheck": true, // Skip type checking of all declaration files (*.d.ts)
    "strict": true, // Enable all strict type-checking options
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file
    "noEmit": true, // Do not emit output (Next.js handles compilation)
    "esModuleInterop": true, // Allow default imports from modules with no default export
    "module": "esnext", // Specify module code generation
    "moduleResolution": "bundler", // For Next.js 13+ App Router, how modules are resolved
    "resolveJsonModule": true, // Allow importing modules with a '.json' extension
    "isolatedModules": true, // Ensure each file can be compiled as a separate module
    "jsx": "preserve", // Preserve JSX in the output, to be handled by Next.js Babel
    "incremental": true, // Enable incremental compilation
    "plugins": [
      {
        "name": "next" // Next.js TypeScript plugin for enhanced checks
      }
    ],
    "paths": {
      "@/*": ["./*"] // Configure path aliases for absolute imports
    }
  },
  "include": [
    "next-env.d.ts", // Next.js environment declaration file
    "**/*.ts", // Include all TypeScript files
    "**/*.tsx", // Include all TSX (TypeScript React) files
    ".next/types/**/*.ts" // Include types generated by Next.js build
  ],
  "exclude": ["node_modules"] // Exclude node_modules from compilation
}
