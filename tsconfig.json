{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    // *** IMPORTANT: PATHS CONFIGURATION ***
    "paths": {
      // If your `app`, `components`, `utils` etc. folders are directly in the project root:
      "@/*": ["./*"]
      // If all your code is inside a `src` directory (e.g., `src/app`, `src/components`),
      // then change the above line to: "@/*": ["./src/*"]
    },
    "baseUrl": "." // This must be "." for the paths to work relative to the root
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}