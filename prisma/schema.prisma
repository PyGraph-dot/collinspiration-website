generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Book {
  id           String   @id @default(cuid())
  title        String
  description  String
  coverImage   String
  price        Float
  category     String
  type         String   // 'my-book' or 'affiliate'
  amazonLink   String?
  nigerianLink String?
  status       String   // 'published' or 'draft'
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Category {
  id          String   @id @default(cuid())
  name        String
  description String?
  status      String   // 'active' or 'inactive'
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
